<div class="row">
    <div class="col-md-6 offset-md-3 text-center">

        <h2>Connexion</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
             <div class="form-group">
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:'Adresse email' %>
              </div>
          <br/>
          <div class="form-group">
           <%= f.password_field :password, autocomplete: "current-password",class:"form-control", placeholder:'Mot de passe' %>
        </div>

      <% if devise_mapping.rememberable? %>
         <div class="form-group">
         <%= f.check_box :remember_me %>Se souvenir de moi
           </div>
        <% end %>
           <br/>
  <div class="actions">
    <%= f.submit "Connexion", class:"btn btn-primary" %>
  </div>
<% end %>

  </div>
</div>
