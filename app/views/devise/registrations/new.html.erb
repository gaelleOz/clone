<div class="row">
    <div class="col-md-6 offset-md-3 text-center ">
<h2>Inscription</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'shared/devise_errors' %>
       
       <div class="field">
    
       </div>
        <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class:"form-control", placeholder:"Votre nom complet" %>
        </div>
         <br/>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Votre adresse email" %>
        </div>

        <div class="form-group">
        <br/>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"CrÃ©er un mot de passe" %>
        </div>
           <br/>

        <div class="actions">
          <%= f.submit "Inscription", class:"btn btn-primary" %>
        </div>
      <% end %>

    </div>
</div>