<div class="row">
  <div class="col-md-3">
  <ul class="sidebar-list">
    <li class="sidebar-item">
      <%= link_to "Modifier mon profil", edit_user_registration_path, class:"sidebar-link active" %>
    </li>
  </ul>
  <%= link_to "Voir mon profil", user_path(current_user.id), class:"btn btn-primary" %>
  </div>

    <div class="col-md-7 offset-md-3 text-center">
      <div class="panel panel-default">
        <div class="panel-heading">Mon profil</div>
          <div class="panel-body">
              <div class="container">
                   <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                   <%= render 'shared/devise_errors' %>

                   <div class="form-group">
                   <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname", class:"form-control", placeholder:"Votre nom complet" %>
                   </div>

                    <div class="form-group">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Votre adresse email" %>
                    </div>
                    <br/> 
                    <div class="row">
                      <div class="col-md-4">
                         <div class="form-group">
                            <span class="btn btn-default">Mettre une photo de profil
                            <%= f.file_field :avatar %>
                            </span>
                          </div>
                        </div>
                      <div>

                     <br/>

                    <div class="form-group">
                    <%= f.text_field :phone_number, autofocus: true, class:"form-control", placeholder:"Votre numéro de téléphone" %>
                    </div>

                  <div class="form-group">
                  <%= f.text_area :description, rows:5, col:25, autofocus: true, autocomplete: "description", class:"form-control", placeholder:"Description" %>
                  </div>


                    <div class="form-group">
                      <%= f.label :mot_de_passe %> <i>(laisser le champ vide si vous ne voulez pas changer de mot de passe)</i><br />
                      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Votre nouveau mot de passe" %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmer votre nouveau mot de passe" %>
                    </div>

                      <br/>
                    <div class="actions">
                      <%= f.submit "Enregistrer", class:"btn btn-primary" %>
                    </div>

                  <% end %>

                  <br/>
                  <br/>
                  <p>Unhappy? <%= button_to "Supprimer mon compte", registration_path(resource_name), class:"btn btn-secondary", data: { confirm: "Are you sure?" }, method: :delete %></p>


            </div>
          </div>
        </div>
      </div>
</div>

